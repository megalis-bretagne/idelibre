{% extends 'base.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}
{% import 'macro/_sitting_tabs.html.twig' as macroTab %}

{% block body %}
    <div class="col-10 offset-1">
        {{ apy_breadcrumb_trail_render(breadcrumb) }}
    </div>

    <div class="col-10 offset-1">
        {{ macroTab.editTabs('actors', sitting) }}
    </div>

    <div class="mt-3 col-10 offset-1">
        <h1>Gerer les utilisateurs convoqu√©s</h1>

        <div class="mt-4">
            {{ macro.backButton('sitting_index') }}
        </div>


        <div class="row mt-4">
            <div class="col-8 offset-2 form-white">
                <div class="row">
                    {% for actor in convocatedActors %}
                        <div class="col-6">
                            <li> {{ actor.firstName }} {{ actor.lastName }}</li>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-8 offset-2 form-white">
                {% block pageForm %}

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="float-right">
                        {{ macro.save('sitting_index') }}
                    </div>
                    {{ form_end(form) }}

                {% endblock %}
            </div>
        </div>

    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/enableSelect2.js') }}"></script>
{% endblock %}
