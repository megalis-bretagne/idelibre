        {% else %}
            <span>Administration</span>
        {% endif %}
    </section>
    <section class="ls-sidebar-menu">
        <ul class="main-menu">

            {% if  app.user.structure %}
                {% if is_granted('ROLE_MANAGE_TYPES') %}
                    <li>
                        <a href="{{ path('type_index') }}">
                            <i class="fas fa-tag"> </i>
                            <span>&ensp; Type de séance</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_MANAGE_USERS') %}
                    <li>
                        <a href="{{ path('user_index') }}">
                            <i class="fas fa-user"></i>
                            <span>&ensp; Utilisateurs</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}


                {% if is_granted('ROLE_MANAGE_PARTIES') %}
                    <li>
                        <a href="{{ path('party_index') }}">
                            <i class="fas fa-users"></i>
                            <span>&ensp; Groupes politiques</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_MANAGE_EMAIL_TEMPLATES') %}
                    <li>
                        <a href="{{ path('email_template_index') }}">
                            <i class="fas fa-envelope"></i>
                            <span>&ensp; Modèles d'email</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}


                {% if is_granted('ROLE_MANAGE_THEMES') %}
                    <li>
                        <a href="{{ path('theme_index') }}">
                            <i class="fas fa-book"></i>
