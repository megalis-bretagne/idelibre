<ls-lib-sidebar>
    <section class="ls-sidebar-coll-logo">
        {% if  app.user.structure %}
            {# idelibre ne gere pas encore les logos par collectivités#}
            {# <img alt="Logo de la ville" src="{{ asset('assets/img/logo_Libriciel.png') }}">#}
