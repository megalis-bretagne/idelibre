{% extends 'base.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}
{% import 'macro/_sitting_tabs.html.twig' as macroTab %}
{% import 'macro/_sitting_nav.html.twig' as macroNav %}

{% block stylesheets %}
    {{ encore_entry_link_tags('vue-manage-projects') }}
{% endblock %}

{% block body %}
    <div class="col-12">
        {{ apy_breadcrumb_trail_render(breadcrumb) }}
    </div>


    <div class="d-flex align-items-center col-11 mt-3">
        <h1 class="flex-grow-1">Détail de la séance </h1>
        {% if  not sitting.isArchived %}
            {{ macroNav.toogleView( path('edit_sitting_actor', {'id': sitting.id}) , 'show') }}
        {% endif %}
    </div>


    <div class="mt-3 col-12">

        <div class="mt-4">
            {{ macro.backButton('sitting_index', {'status' : sitting.isArchived ? 'archived' : 'active'}) }}
        </div>


        <div v-cloak id="app">


            <div class="col-10 offset-1 form-white mt-4">
                {{ macroTab.showTabs('actors', sitting) }}

                <div class="alert alert-danger" v-if="errorMessage">
                    ${ errorMessage }
                </div>

                <div class="alert alert-success" v-if="infoMessage">
                    ${ infoMessage }
                </div>

                <div class="row">
                    <div class="col-3">
                        <h2>Elus</h2>
                    </div>
                    <div class="col-9">


                        <div class="float-right" v-if="!isArchived">
                            <button class="btn btn-outline-primary " @click="openShowModalNotifyAgain()">Notifier à nouveau
                            </button>
                            <button class="btn btn-outline-primary " @click="openShowModalAttendance()">Gerer les Présences
                            </button>

                            <button :disabled="comelusId || !isComelus || isComelusSending" class="btn btn-primary" title="Envoyer à comelus"
                                    data-target="#confirmComelus"
                                    data-toggle="modal">
                                <span class="fa fa-paper-plane"></span> Envoyer via comelus
                            </button>

                            <button :disabled="isAlreadySentActors" class="btn btn-primary" title="Envoyer les convocations"
                                    data-target="#confirm"
                                    data-toggle="modal">
                                <span class="fa fa-paper-plane"></span> Envoyer toutes les convocations
                            </button>
                        </div>
                    </div>
                </div>

                <div class="input-group col-3 float-right pr-0">
                    <input type="text" class="form-control" placeholder="Rechercher" v-model="filter.actor">
                    <div class="input-group-append">
                        <button class="btn btn-primary" title="Effacer" @click="resetFilters()">
                            <span class="fas fa-times"></span>
                        </button>
                    </div>
                </div>

                <table class="table table-striped mt-5 bg-white">
                    <thead>
                    <tr class="d-flex">
                        <th class="col-3">Nom</th>
                        <th class="col-2">Envoyée</th>
                        <th class="col-2">Reçue</th>
                        <th class="col-2">Présence</th>
                        <th class="col-3">Mandataire</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr class="d-flex" v-if="filteredActorConvocations.length == 0">
                       <td class="col-12 text-center">
                           Aucun élu convoqué
                       </td>
                    </tr>

                    <tr class="d-flex " v-for="convocation in filteredActorConvocations">

                        <td class="col-3">
                            ${convocation.user.firstName} ${convocation.user.lastName}
                        </td>
                        <td v-if="convocation.sentTimestamp" class="col-2"><span class="fas fa-check text-success"> </span>
                            ${convocation.sentTimestamp.createdAt | formatDateString }
                        </td>
                        <td v-else-if="!isArchived" class="col-2">
                            <button v-on:click="sendConvocation(convocation.id)" class="btn btn-outline-primary borderless mt-n2"
                                    title="Envoyer"><span class="fa fa-paper-plane"></span></button>
                        </td>
                        <td v-else class="col-2">
                            <span class="fas fa-times text-danger"> </span>
                        </td>

                        <td v-if="convocation.receivedTimestamp" class="col-2">
                            <span class="fas fa-check text-success"> </span> ${convocation.receivedTimestamp.createdAt | formatDateString }
                        </td>
                        <td v-else class="col-2">
                            <span class="fas fa-times text-danger"> </span>
                        </td>

                        <td class="col-2">
                            <span v-if="!convocation.attendance" class="text-warning"
                                  title="Sans réponse">
                                <i class="fas fa-question"></i>
                            </span>
                            <span v-else-if="convocation.attendance === 'present'"
                                  class="text-success"
                                  title="Présent">
                                <i class="fas fa-check"></i>
                            </span>
                            <span v-else class="text-danger" title="Absent">
                                <i class="fas fa-times"></i>
                            </span>

                        </td>
                        <td class="col-3">
                            <span v-if="convocation.deputy"> ${convocation.deputy}</span>
                        </td>

                    </tr>

                    </tbody>

                </table>
            </div>


            {% if sitting.invitationFile %}
                <div class="col-10 offset-1 form-white mt-4">
                    <div class="row">
                        <div class="col-6">
                            <h2>Personnel administratif</h2>
                        </div>
                        <div class="col-6">
                            <button :disabled="isAlreadySentEmployees" class="btn btn-primary float-right" title="Envoyer"
                                    data-target="#confirm_employee"
                                    data-toggle="modal">
                                <span class="fa fa-paper-plane"></span> Envoyer toutes les invitations
                            </button>
                        </div>
                    </div>

                    <div class="input-group col-3 float-right pr-0">
                        <input type="text" class="form-control" placeholder="Rechercher" v-model="filter.employee">
                        <div class="input-group-append">
                            <button class="btn btn-primary" title="Effacer" @click="resetFilters()">
                                <span class="fas fa-times"></span>
                            </button>
                        </div>
                    </div>

                    <table class="table table-striped mt-5 bg-white">
                        <thead>
                        <tr class="d-flex">
                            <th class="col-3">Nom</th>
                            <th class="col-2">Envoyée</th>
                            <th class="col-2">Reçue</th>
                            <th class="col-2">Présence</th>
                            <th class="col-3"></th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr class="d-flex" v-if="filteredEmployeeConvocations.length == 0">
                            <td class="col-12 text-center">
                                Aucun administratif invité
                            </td>
                        </tr>


                        <tr class="d-flex" v-for="convocation in filteredEmployeeConvocations">
                            <td class="col-3">
                                ${convocation.user.firstName} ${convocation.user.lastName}
                            </td>
                            <td v-if="convocation.sentTimestamp" class="col-2"><span class="fas fa-check text-success"> </span>
                                ${convocation.sentTimestamp.createdAt | formatDateString }
                            </td>
                            <td v-else class="col-2">
                                <button v-on:click="sendConvocation(convocation.id)" class="btn btn-outline-primary borderless mt-n2"
                                        title="Envoyer"><span class="fa fa-paper-plane"></span></button>
                            </td>

                            <td v-if="convocation.receivedTimestamp" class="col-2">
                                <span class="fas fa-check text-success"> </span>
                                ${convocation.receivedTimestamp.createdAt | formatDateString }
                            </td>
                            <td v-else class="col-2">
                                <span class="fas fa-times text-danger"> </span>
                            </td>

                            <td class="col-2">
                            <span v-if="!convocation.attendance" class="text-warning"
                                  title="Sans réponse">
                                <i class="fas fa-question"></i>
                            </span>
                                <span v-else-if="convocation.attendance === 'present'"
                                      class="text-success"
                                      title="Présent">
                                <i class="fas fa-check"></i>
                            </span>
                                <span v-else class="text-danger" title="Absent">
                                <i class="fas fa-times"></i>
                            </span>

                            </td>

                            <td class="col-3"></td>

                        </tr>

                        </tbody>

                    </table>
                </div>



                <div class="col-10 offset-1 form-white mt-4">
                    <div class="row">
                        <div class="col-6">
                            <h2>Invités</h2>
                        </div>
                        <div class="col-6">
                            <button :disabled="isAlreadySentGuests" class="btn btn-primary float-right" title="Envoyer"
                                    data-target="#confirm_guest"
                                    data-toggle="modal">
                                <span class="fa fa-paper-plane"></span> Envoyer toutes les invitations
                            </button>
                        </div>
                    </div>

                    <div class="input-group col-3 float-right pr-0">
                        <input type="text" class="form-control" placeholder="Rechercher" v-model="filter.guest">
                        <div class="input-group-append">
                            <button class="btn btn-primary" title="Effacer" @click="resetFilters()">
                                <span class="fas fa-times"></span>
                            </button>
                        </div>
                    </div>

                    <table class="table table-striped mt-5 bg-white">
                        <thead>
                        <tr class="d-flex">
                            <th class="col-3">Nom</th>
                            <th class="col-2">Envoyée</th>
                            <th class="col-2">Reçue</th>
                            <th class="col-2">Présence</th>
                            <th class="col-3"></th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr class="d-flex" v-if="filteredGuestConvocations.length == 0">
                            <td class="col-12 text-center">
                                Aucun invité
                            </td>
                        </tr>


                        <tr class="d-flex" v-for="convocation in filteredGuestConvocations">
                            <td class="col-3">
                                ${convocation.user.firstName} ${convocation.user.lastName}
                            </td>
                            <td v-if="convocation.sentTimestamp" class="col-2"><span class="fas fa-check text-success"> </span>
                                ${convocation.sentTimestamp.createdAt | formatDateString }
                            </td>
                            <td v-else class="col-2">
                                <button v-on:click="sendConvocation(convocation.id)" class="btn btn-outline-primary borderless mt-n2"
                                        title="Envoyer"><span class="fa fa-paper-plane"></span></button>
                            </td>

                            <td v-if="convocation.receivedTimestamp" class="col-2">
                                <span class="fas fa-check text-success"> </span>
                                ${convocation.receivedTimestamp.createdAt | formatDateString }
                            </td>
                            <td v-else class="col-2">
                                <span class="fas fa-times text-danger"> </span>
                            </td>

                            <td class="col-2">
                            <span v-if="!convocation.attendance" class="text-warning"
                                  title="Sans réponse">
                                <i class="fas fa-question"></i>
                            </span>
                                <span v-else-if="convocation.attendance === 'present'"
                                      class="text-success"
                                      title="Présent">
                                <i class="fas fa-check"></i>
                            </span>
                                <span v-else class="text-danger" title="Absent">
                                <i class="fas fa-times"></i>
                            </span>

                            </td>
                            <td class="col-3"></td>

                        </tr>

                        </tbody>

                    </table>
                </div>
            {% endif %}

            <div id="confirm" ref="confirm" class="modal fade" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Attention</h4>
                            <button class="close" data-dismiss="modal" type="button">&times;</button>
                        </div>
                        <div class="modal-body">
                            Veuillez valider l'envoi de toutes les convocations
                        </div>

                        <div class="modal-footer">

                            <button class="btn btn-secondary" data-dismiss="modal" type="button">
                                <span class="fa fa-times"></span> Annuler
                            </button>
                            <button class="btn btn-primary" data-dismiss="modal" type="button" v-on:click="sendConvocations('Actor')">
                                Envoyer
                            </button>


                        </div>
                    </div>
                </div>
            </div>


            <div id="confirm_employee" ref="confirm_employee" class="modal fade" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Attention</h4>
                            <button class="close" data-dismiss="modal" type="button">&times;</button>
                        </div>
                        <div class="modal-body">
                            Veuillez valider l'envoi de toutes les invitations aux Personnels administratifs
                        </div>

                        <div class="modal-footer">

                            <button class="btn btn-secondary" data-dismiss="modal" type="button">
                                <span class="fa fa-times"></span> Annuler
                            </button>
                            <button class="btn btn-primary" data-dismiss="modal" type="button" v-on:click="sendConvocations('Employee')">
                                Envoyer
                            </button>


                        </div>
                    </div>
                </div>
            </div>


            <div id="confirm_guest" ref="confirm_guest" class="modal fade" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Attention</h4>
                            <button class="close" data-dismiss="modal" type="button">&times;</button>
                        </div>
                        <div class="modal-body">
                            Veuillez valider l'envoi de toutes les invitations aux invités
                        </div>

                        <div class="modal-footer">

                            <button class="btn btn-secondary" data-dismiss="modal" type="button">
                                <span class="fa fa-times"></span> Annuler
                            </button>
                            <button class="btn btn-primary" data-dismiss="modal" type="button" v-on:click="sendConvocations('Guest')">
                                Envoyer
                            </button>
                        </div>
                    </div>
                </div>
            </div>


            <div id="confirmComelus" ref="confirmComelus" class="modal fade" role="dialog" data-backdrop="static">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Attention</h4>
                            <button class="close" data-dismiss="modal" type="button">&times;</button>
                        </div>
                        <div class="modal-body">
                            Veuillez valider l'envoi de toutes les documents via comelus
                        </div>

                        <div class="modal-footer">

                            <button class="btn btn-secondary" data-dismiss="modal" type="button">
                                <span class="fa fa-times"></span> Annuler
                            </button>
                            <button class="btn btn-primary" data-dismiss="modal" type="button" v-on:click="sendComelus()">
                                Envoyer
                            </button>


                        </div>
                    </div>
                </div>
            </div>


            <div v-if="showModalAttendance">
                <transition name="modal">
                    <div class="modal-mask">
                        <div class="modal-wrapper">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Gestion des présences 2</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" @click="showModalAttendance = false">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <table class="table table-striped">
                                            <tbody style="display: block;overflow-y: auto;max-height: 60vh;">
                                            <tr class="d-flex" v-for="status in attendanceStatus">
                                                <td class="col-5">

                                                    ${status.firstName} ${status.lastName}
                                                </td>
                                                <td class="col-3">
                                                    <select class="select form-control" v-model="status.attendance"
                                                            @change="changeAttendance(status)">
                                                        <option value="">Sans Réponse</option>
                                                        <option value="present">Présent</option>
                                                        <option value="absent">Absent</option>
                                                    </select>
                                                </td>

                                                <td class="col-4" v-if="status.category === 'convocation'">
                                                    <input class="select form-control" v-model="status.deputy"
                                                           @change="changeAttendance(status)">
                                                    </input>
                                                </td>


                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" @click="showModalAttendance = false">
                                            <span class="fa fa-times"></span> Annuler
                                        </button>
                                        <button type="button" class="btn btn-primary" @click="saveAttendance()">
                                            <span class="fa fa-save"></span> Enregistrer
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </transition>
            </div>


            <div v-if="showModalNotifyAgain">
                <transition name="modal">
                    <div class="modal-mask">
                        <div class="modal-wrapper">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Notifier les convoqués et invités</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" @click="showModalNotifyAgain = false">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="object">Objet</label>
                                            <input type="text" class="form-control" id="object" placeholder="Objet"
                                                   v-model="notification.object">
                                        </div>

                                        <div class="form-group">
                                            <label for="content">Message</label>
                                            <textarea class="form-control" id="content" placeholder="Votre message ..." rows="7"
                                                      v-model="notification.content"> </textarea>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" @click="showModalNotifyAgain = false">
                                            <span class="fa fa-times"></span> Annuler
                                        </button>
                                        <button type="button" class="btn btn-primary" @click="sendNotifyAgain()">
                                            <span class="fa fa-paper-plane"></span> Envoyer
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </transition>
            </div>

        </div>

    </div>






{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('vue-show-invitations') }}
{% endblock %}
