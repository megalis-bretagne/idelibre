{% extends 'form.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}
{% import 'macro/_sitting_tabs.html.twig' as macroTab %}



{% block pageTitle 'Modifier les informations d\'une s√©ance' %}

{% block pageActions %}
    {{ macro.backButton('sitting_index') }}
{% endblock %}


{% block pageForm %}

    {{ macroTab.editTabs('information', sitting) }}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="float-right">
        {% block pageSaveReturn %} {{ macro.save('sitting_index') }} {% endblock %}
    </div>
    {{ form_end(form) }}

    <div id="confirm-not-save" class="modal fade" role="dialog" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Attention</h4>
                    <button class="close" data-dismiss="modal" type="button">&times;</button>
                </div>
                <div class="modal-body">
                    Voulez vous changer de page sans sauvegarder ?
                </div>

                <div class="modal-footer">

                    <button class="btn btn-secondary" data-dismiss="modal" type="button">
                        <span class="fa fa-times"></span> Annuler
                    </button>
                    <a href="#" id="confirm-btn">Confirmer</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('vue-edit-informations') }}
{% endblock %}


