{% extends 'form.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}

{% block pageTitle  'Modifier un administrateur'%}

{% block pageActions %}
    <a href="{{ path('admin_index') }}" class="btn btn-outline-primary">
        <span class="fa fa-arrow-left"></span> Retour
    </a>
{% endblock %}


{% block pageForm %}
    {{ form_start(form) }}

    {{ form_widget(form) }}

    <div class="float-right">
        {{ macro.save('admin_index') }}
    </div>
    {{ form_end(form) }}

    {% if user.group %}
        <span class="badge badge-primary">{{ user.group.name }}</span>
    {% endif %}
{% endblock %}

