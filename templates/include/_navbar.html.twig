<nav id="navbarContainer" class="navbar navbar-expand-md navbar-ls navbar-dark bg-ls-dark">
    <a class="navbar-brand" href="#">
        <img style="height: 22px; padding-bottom: 2px;" src="{{ asset('assets/img/ls-logo.svg') }}" alt="idelibre" class="img-fluid">
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto"></ul>
        {% if app.user %}
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        {% if app.user.structure %}
                            {{ app.user.structure.name }} -
                        {% endif %}
                        {{ app.user.username }}
                    </a>


                    <div class="dropdown-menu dropdown-menu-right popup-menu-right" aria-labelledby="navbarDropdown">
                        <div class="dropdown-content">

                            <a href="{{ path('user_preferences') }}" class="dropdown-item">
                                <span class="fas fa-user"></span>
                                Mes préférences
                            </a>

                            <div class="dropdown-divider"></div>

                            <a href="{{ path('gdpr_notice') }}" class="dropdown-item">
                                <span class="fas fa-user-secret"></span>
                                Politique de confidentialité (RGPD)
                            </a>

                            {% if (is_granted('ROLE_MANAGE_STRUCTURES') and app.user.structure) %}
                                <div class="dropdown-divider"></div>
                                <a href="{{ path('security_impersonate_exit') }}" class="dropdown-item">
                                    <span class="fas fa-sign-out-alt"></span>
                                    {{ app.user.structure.name }}
                                </a>
                            {% endif %}

                            <div class="dropdown-divider"></div>

                            <a class="dropdown-item" href="{{ path('app_logout') }}">
                                <span class="fas fa-sign-out-alt"></span>
                                Se déconnecter
                            </a>

                        </div>
                    </div>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>




