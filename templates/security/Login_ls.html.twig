{% extends 'base_login.html.twig' %}

{% block body %}
    <div class="form-side">

        <div class="form-content">
            <div class="soft-logo">
                <img id="libriciel-logo" alt="Image du Libriciel"
                     height="10" width="10"
                     src="{{ asset('assets/img/il-color.svg') }}">
            </div>


            <section>

                <div class="text-center mt-5">
                    <a href="/idelibre_client31/" class="btn btn-primary btn-lg"> Accès élu</a>
                </div>
                <h1 class="page-title">Veuillez saisir vos identifiants de connexion </h1>
                <form method="post">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >


                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success"><i class="fa fa-check"></i> {{ message }}</div>

                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger"><i class="fa fa-exclamation-triangle"></i> {{ message }}
                        </div>
                    {% endfor %}

                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-3 col-form-label">Identifiant</label>
                        <div class="col-sm-9">

                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><span class="fa fa-user"></span></div>
                                </div>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                       class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-3 col-form-label">Mot de passe</label>
                        <div class="col-sm-9">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><span class="fa fa-lock"></span></div>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Mot de passe" required>
                            </div>

                        </div>
                    </div>


                    <div class="float-right">
                        <a href="{{ path('app_forget') }}" class="btn btn-link forgot-passwd-lnk">
                            Mot de passe oublié ?
                        </a>

                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-sign-in fa-sign-in-alt fa-fw"></i>
                            Se connecter
                        </button>
                    </div>
                </form>
            </section>


        </div>
    </div>

{% endblock %}
