                        </ul>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_MANAGE_SITTINGS') %}
                    <li>
                        <a href="{{ path('sitting_index') }}">
                            <i class="ls-font ls-seance" style="font-size: 0.8em; margin-right: -20px"></i>
                            <span>&ensp; Séances</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_STRUCTURE_ADMIN') %}
                    <li>
                    <a href="{{ path('structure_preferences') }}">
                        <i class="fas fa-info-circle"></i>
                        <span>&ensp; Informations</span>
                    </a>
                    <ul class="sub-menu">
                    </ul>
                {% endif %}</li>


                {% if is_granted('ROLE_MANAGE_CONNECTORS') %}
                    <li>
                        <a href="{{ path('connector_index') }}">
                            <i class="fas fa-cog"></i>
                            <span>&ensp; Connecteurs</span>
                        </a>
                        <ul class="sub-menu">
                        </ul>
                    </li>
                {% endif %}
            {% endif %}


            {% if is_granted('ROLE_MANAGE_STRUCTURES') %}
                <li>
                    <a href="#">
                        <i class="fas fa-cogs"> </i>
                        <span>&ensp; Plateforme</span>
                    </a>
                    <ul class="sub-menu">

                        {% if is_granted('ROLE_SUPERADMIN') %}
                            <li>
                                <a href="{{ path('group_index') }}">
                                    Groupes
                                </a>
                            </li>
