{% block actors %}
    <option disabled selected></option>

    {% if actorsDeputies %}
        <optgroup  label="Suppléant affectés">
        {% for actorDeputy in actorsDeputies %}
            <option title="Elu titulaire : {{ actorDeputy.firstName ~ ' ' ~ actorDeputy.lastName}}"
                    value="{{ actorDeputy.associatedWith.firstName }} {{ actorDeputy.associatedWith.lastName }}"
                   > {{ actorDeputy.associatedWith.firstName ~ ' ' ~ actorDeputy.associatedWith.lastName}}
            </option>
        {% endfor %}
        </optgroup>
    {% endif %}

    {% if deputies %}
        <optgroup label="Suppléants disponibles">
        {% for deputy in deputies %}
            <option value="{{ deputy.firstName}} {{ deputy.lastName }}" > {{ deputy.firstName}} {{ deputy.lastName}} </option>
        {% endfor %}
        </optgroup>
    {% endif %}

{% endblock %}
