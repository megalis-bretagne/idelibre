{% extends 'base.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}
{% import 'macro/_sitting_tabs.html.twig' as macroTab %}

{% block body %}
    <div class="col-10 offset-1">
        {{ apy_breadcrumb_trail_render(breadcrumb) }}
    </div>

    <div class="mt-3 col-10 offset-1">
        <h1>Détail de la séance</h1>

        <div class="mt-4">
            {{ macro.backButton('sitting_index') }}
        </div>


        <div class="col-10 offset-1 form-white mt-4">
            <h2 class="mb-3">Informations générales</h2>
            <div class="row">
                <div class="col-4 text-right">
                    <b>Type :</b>
                </div>
                <div class="col-8">
                    {{ sitting.name }}
                </div>
            </div>

            <div class="row">
                <div class="col-4 text-right">
                    <b>Date :</b>
                </div>
                <div class="col-8">
                    {{ sitting.date | date('d/m/Y : H:i' , timezone) }}
                </div>
            </div>


            <div class="row">
                <div class="col-4 text-right">
                    <b>Lieu :</b>
                </div>
                <div class="col-8">
                    {{ sitting.place | default('') }}
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-4 text-right">
                    <b>Convocation :</b>
                </div>
                <div class="col-8">
                    {{ sitting.file.name }}
                    <a class="btn btn-outline-secondary borderless"
                       href="{{ path('file_download', {'id': sitting.file.id}) }}"
                       title="Télécharger la convocation">
                        <span class="fas fa-download"></span>
                    </a>
                </div>
            </div>


        </div>




        <div class="col-10 offset-1 form-white mt-4">
            <h2>Acteurs : convocation et présence</h2>

            <table class="table table-striped mt-3 bg-white">
                <thead>
                <tr class="d-flex">
                    <th class="col-3">Nom</th>
                    <th class="col-2">Envoyée</th>
                    <th class="col-2">Reçue</th>
                    <th class="col-2">Présence</th>
                    <th class="col-3">Mandataire</th>
                </tr>
                </thead>
                <tbody>
                {% for convocation in convocations %}
                    <tr class="d-flex">
                        <td class="col-3">{{ convocation.actor.firstName }} {{ convocation.actor.lastName }}</td>
                        <td class="col-2"></td>
                        <td class="col-2"></td>
                        <td class="col-2"></td>
                        <td class="col-3"></td>

                    </tr>

                {% endfor %}


                </tbody>

            </table>
        </div>





        <div class="col-10 offset-1 mt-4 bg-white">
            <h1 class="mt-3">Projets</h1>
            {% for project in projects %}

                <div class="alert alert-secondary">
                    {# firstLine #}
                    <div class="row">
                        <div class="col-1">
                            <span class="badge badge-primary" style="font-size: 1.5em">{{ project.rank + 1 }}</span>
                        </div>

                        <div class="col-5">
                            {{ project.name }}
                        </div>

                        <div class="col-5">
                            {{ project.file.name }}
                        </div>

                        <div class="col-1">
                            <a class="btn btn-outline-secondary borderless"
                               href="{{ path('file_download', {'id': project.file.id}) }}"
                               title="Télécharger le project">
                                <span class="fas fa-download"></span>
                            </a>
                        </div>

                    </div>
                    {# second line #}
                    <div class="row mt-3">
                        <div class="col-2">

                        </div>

                        <div class="col-4">
                            {% if project.reporter %}
                                {{ project.reporter.firstName }} {{ project.reporter.lastName }}
                            {% endif %}
                        </div>
                        <div class="col-6">
                            {{ project.theme.fullName |default("") }}
                        </div>
                    </div>

                    {# annexes#}


                    <div class="col-10 offset-1 mt-1">
                        {% for annex in project.annexes %}

                            <div class="row">
                                <span class="">{{ annex.rank }}</span>
                                <div class="col-10">{{ annex.file.name }}</div>
                                <div class="col-1">
                                    <a class="btn btn-outline-secondary borderless"
                                       href="{{ path('file_download', {'id': annex.file.id}) }}"
                                       title="Télécharger l'annexe">
                                        <span class="fas fa-download"></span>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>


                </div>
            {% endfor %}
        </div>

    </div>


{% endblock %}

