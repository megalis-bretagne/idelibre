{% extends 'base_login.html.twig' %}

{% block body %}

    <div class="form-side">
        <div class="form-content">
            <div class="soft-logo">
                <img id="libriciel-logo" alt="Image du Libriciel"
                     height="10" width="10"
                     src="{{ asset('assets/img/il-color.svg') }}">
            </div>

            <section>
                <h1 class="page-title">Renseigner votre nouveau mot de passe</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}


                <button type="submit" class="btn btn-outline-primary float-right">Enregistrer</button>
                {{ form_end(form) }}
            </section>
        </div>
    </div>

{% endblock %}
