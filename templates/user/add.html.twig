{% extends 'form.html.twig' %}
{% import 'macro/_forms.html.twig' as macro %}

{% block pageTitle 'Ajouter un utilisateur' %}

{% block pageActions %}
    {{ macro.backButton('user_index') }}
{% endblock %}

{% block pageForm %}

    {{ form_start(form) }}

    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}


    {{ form_label(form.username) }}
    {{ form_errors(form.username) }}

    <div class="row mb-3">
        <div class="col-7">
            {{ form_widget(form.username) }}
        </div>
        <div class="col-5 form-control borderless">
            <b class="text-ls-dark">@{{ suffix }}</b>
        </div>
    </div>
    {{ form_help(form.username) }}

    {{ form_row(form.email) }}
    {{ form_row(form.role) }}

    <div id="actor-info" style="display: none">
        {{ form_row(form.party) }}
        {{ form_row(form.title) }}
    </div>

    {{ form_widget(form) }}
    <div class="float-right">
        {% block pageSaveReturn %}{{ macro.save('user_index') }}{% endblock %}
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('create-user') }}
{% endblock %}


